# =============================================================================
# Пример файла переменных окружения
# Скопируйте этот файл в .env и настройте под свои нужды
# =============================================================================

# -----------------------------------------------------------------------------
# Nginx Reverse Proxy
# -----------------------------------------------------------------------------
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# -----------------------------------------------------------------------------
# SSL Configuration
# -----------------------------------------------------------------------------
# Доменное имя (обновите перед получением SSL сертификата)
DOMAIN=localhost

# Email для Let's Encrypt (для уведомлений о сертификате)
SSL_EMAIL=admin@example.com

# Staging режим Let's Encrypt (1 = test, 0 = production)
# ВАЖНО: Сначала тестируйте с 1, потом меняйте на 0
CERTBOT_STAGING=1

# -----------------------------------------------------------------------------
# C# API Service
# -----------------------------------------------------------------------------
API_HTTP_PORT=5000
API_HTTPS_PORT=5001
ASPNETCORE_ENVIRONMENT=Development
ALLOWED_ORIGINS=http://localhost:5000,http://localhost:3000

# -----------------------------------------------------------------------------
# Python Geocode Service (поиск адресов)
# -----------------------------------------------------------------------------
GEOCODE_SERVICE_PORT=50051
GEOCODE_SERVICE_GRPC_PORT=50051

# -----------------------------------------------------------------------------
# Address Parser Service (libpostal)
# -----------------------------------------------------------------------------
ADDRESS_PARSER_PORT=50052
ADDRESS_PARSER_GRPC_PORT=50052

# -----------------------------------------------------------------------------
# Service URLs
# -----------------------------------------------------------------------------
PYTHON_SERVICE_URL=http://geocode-service:50051
ADDRESS_PARSER_URL=http://address-parser:50052

# -----------------------------------------------------------------------------
# OSM Database Service
# -----------------------------------------------------------------------------
# Имя файла OSM данных (должен находиться в директории source/)
OSM_FILE_NAME=10-moscow.osm.pbf

# Внешний порт для OSM API
OSM_DB_PORT=8091

# -----------------------------------------------------------------------------
# Настройки
# -----------------------------------------------------------------------------
ENABLE_VERBOSE_LOGGING=1
GRPC_TIMEOUT_SECONDS=30
