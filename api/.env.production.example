# Production Environment Configuration (EXAMPLE)
# Скопируйте этот файл в .env.production и настройте для вашего сервера

# Domain settings
ASPNETCORE_URLS=http://0.0.0.0:5000
ASPNETCORE_ENVIRONMENT=Production
DOMAIN=your-domain.com

# Allowed Origins for CORS (comma-separated)
# ВАЖНО: Замените на ваш реальный домен
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Python Geocode Service (обычно на том же сервере)
PYTHON_SERVICE_URL=http://localhost:50051

# Address Parser Service (обычно на том же сервере)
ADDRESS_PARSER_SERVICE_URL=http://localhost:50052

# SignalR Settings
SIGNALR_MAX_MESSAGE_SIZE=102400
SIGNALR_ENABLE_DETAILED_ERRORS=false

# Logging
LOGGING__LOGLEVEL__DEFAULT=Information
LOGGING__LOGLEVEL__MICROSOFT_ASPNETCORE=Warning
